<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shrinker</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" 
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
</head>

<body>
    <div class="container">
    <h1>URL Shrinker</h1>

    <form action="/shortUrls" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">Url</label>
        <input placeholder="URL" required type="url" 
        name="fullUrl" id="fullUrl" class="form-control col mr-2">
        <button class="btn btn-success" type="submit" >Shrink</button>
    </form>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Short URL</th>
                <!-- <th>Clicks</th> -->
            </tr>
        </thead>
        <tbody>
            <%  shortUrls.forEach(url => { %>
            <tr>
                <td><a href="<%= url.fullUrl %>"><%= url.fullUrl %></a></td>
                <td><a href="<%= url.short %>"><%= url.short %></a></td>
            </tr>
          <%  }) %>
        </tbody>
    </table>
</body>
</div>
</html>